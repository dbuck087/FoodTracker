<p id="notice"><%= notice %></p>

<div class="container-fluid bg-primary text-center text-white p-3">
  <h1>Food Tracker</h1>
</div>

<div class="container-fluid bg-secondary p-3">

  <table class="center">

    <thead>
      <tr>
        <th>Item Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= project.quantity %></td>
          <td><%= project.date %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container-fluid bg-secondary text-center p-1"> 
  <a class="btn btn-primary text-white" href="projects/new" role="button">New Item</a>
</div>

