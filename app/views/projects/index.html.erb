<p id="notice"><%= notice %></p>

<div class="container-fluid bg-primary text-white text-center p-3">
  <h1>Food Tracker</h1>
</div>

<div class="container-fluid bg-custom-color p-3">

  <table class="center">

    <thead>
      <tr>
        <th>Item Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= project.quantity %></td>
          <td><%= project.date %></td>
          <td><a class="btn btn-light text-primary" href=<%= project_path(project) %> role="button">Show</a></td>
          <td><a class="btn btn-light text-primary" href=<%= edit_project_path(project) %> role="button">Edit</a></td>
          <td><a class="btn btn-light text-primary" <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container-fluid text-center p-1"> 
  <a class="btn btn-primary text-white" href="projects/new" role="button">New Item</a>
</div>

