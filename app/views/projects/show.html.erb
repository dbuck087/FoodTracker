<p id="notice"><%= notice %></p>

<div class="container bg-primary text-white p-3 text-center">
  <h1>Item Details</h1>

  <div class="container-fluid p-3">
    <div class="table text-white">
      <div class="col"
      <thead>
        <th>Item Name</th>
        <th colspan="3"></th>
      </div>

      <tbody
        <tr>
          <td><%= @project.title %></td>
        </tr>
      </tbody>
    </div>
  </div>

  <div class="container-fluid p-3">
    <div class="table text-white">
      <th>Desciption</th>
      <th colspan="3"></th>
    </div>

    <tbody
      <tr>
        <td><%= @project.description %></td>
      </tr>
    </tbody>
    </table>  
  </div>

  <div class="container-fluid p-3">
    <div class="table text-white">
      <th>Quantity</th>
      <th colspan="3"></th>
    </div>

    <tbody
      <tr>
        <td><%= @project.quantity %></td>
      </tr>
    </tbody>
    </table>  
  </div>

  <div class="container-fluid p-3">
    <div class="table text-white">
      <th>Date</th>
      <th colspan="3"></th>
    </div>

    <tbody
      <tr>
        <td><%= @project.date %></td>
      </tr>
    </tbody>
    </table>  
  </div>
</div>
